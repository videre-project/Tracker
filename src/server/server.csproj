<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <AssemblyName>Videre Tracker</AssemblyName>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <OutputType>WinExe</OutputType>
    <UseWindowsForms>true</UseWindowsForms>
    <EnableWindowsTargeting>True</EnableWindowsTargeting>
  </PropertyGroup>

  <!-- Frontend SPA Configuration -->
  <PropertyGroup>
    <SpaRoot>..\client</SpaRoot>
    <SpaProxyLaunchCommand>npm run dev</SpaProxyLaunchCommand>
    <SpaProxyServerUrl>https://localhost:5173</SpaProxyServerUrl>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\client\client.esproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <!-- Application Configuration -->
  <ItemGroup>
    <!-- Remove all references to explicitly handle which configs to publish -->
    <Content Remove="appsettings.json" />
    <Content Remove="appsettings.*.json" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="appsettings.json"
             CopyToOutputDirectory="Always" />
    <Content Include="appsettings.$(ASPNETCORE_ENVIRONMENT).json"
             Condition="Exists('appsettings.$(ASPNETCORE_ENVIRONMENT).json')"
             DependentUpon="appsettings.json"
             CopyToOutputDirectory="Always" />
  </ItemGroup>

  <!-- Publishing Configuration -->
  <PropertyGroup>
    <PublishDir>..\..\publish\</PublishDir>
    <PublishSingleFile>true</PublishSingleFile>
    <DebugType>embedded</DebugType>
    <IsWebConfigTransformDisabled>true</IsWebConfigTransformDisabled>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
  </PropertyGroup>

  <ItemGroup>
    <!-- ASP.NET Web API -->
    <PackageReference Include="Microsoft.AspNetCore.OpenApi"
                      Version="8.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.SpaProxy"
                      Version="8.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore"
                      Version="6.5.0" />
    <!-- WebView2 Application -->
    <PackageReference Include="Microsoft.Web.WebView2"
                      Version="1.0.2210.55" />
  </ItemGroup>

</Project>